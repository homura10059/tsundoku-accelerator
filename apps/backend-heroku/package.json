{
  "name": "amazon-ebook-api",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/o-hayato/amazon-ebook-api.git",
  "author": "o-hayato <preasper0+github@gmail.com>",
  "license": "MIT",
  "scripts": {
    "redis:up": "docker-compose up -d",
    "redis:down": "docker-compose down -v",
    "dev": "ts-node-dev --respawn src/index.ts",
    "dev:worker": "ts-node-dev --respawn src/worker.ts",
    "build": "tsc -p tsconfig.json",
    "start": "cp schema.graphql dist/ && node dist/index.js",
    "worker:start": "node dist/worker.js",
    "trigger:scanAllWishList": "env JOB_TYPE=ScanAllWishList node dist/trigger.js",
    "trigger:scanAllItems": "env JOB_TYPE=ScanAllItems node dist/trigger.js",
    "trigger:notifyAllUsers": "env JOB_TYPE=NotifyAllUsers node dist/trigger.js",
    "trigger:deleteNoRelationItem": "env JOB_TYPE=DeleteNoRelationItem node dist/trigger.js",
    "trigger:wakeUp": "env JOB_TYPE=WakeUp node dist/trigger.js",
    "format": "prettier --write $PWD/'src/**/*.{js,ts}'",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "yarn lint --fix",
    "clean": "rm -rf dist",
    "graphql:codegen": "graphql-codegen --config codegen.yml",
    "supabase:codegen": "source ./.env && openapi-typescript \"$SUPABASE_URL/rest/v1/?apikey=$SERVICE_KEY\" --output src/types/supabase.ts"
  },
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^7.1.0",
    "@graphql-tools/load": "^7.3.2",
    "@graphql-tools/schema": "^8.2.0",
    "@supabase/supabase-js": "^1.24.0",
    "apollo-server": "^3.3.0",
    "bull": "^3.29.3",
    "date-fns": "^2.27.0",
    "discord.js": "^12.5.3",
    "dotenv": "^10.0.0",
    "got": "^11.8.3",
    "graphql": "^15.6.0",
    "puppeteer": "^5.5.0",
    "puppeteer-autoscroll-down": "^0.1.6",
    "throng": "^5.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.2.0",
    "@graphql-codegen/typescript": "^2.2.2",
    "@graphql-codegen/typescript-resolvers": "^2.2.1",
    "@types/bull": "^3.15.5",
    "@types/node": "^14.14.16",
    "@types/puppeteer": "^5.4.2",
    "@types/throng": "^5.0.3",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "openapi-typescript": "^4.4.0",
    "prettier": "^2.3.2",
    "ts-node": "^10.1.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  }
}
